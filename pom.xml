<? xml version = " 1.0 " encoding = " UTF-8 " ?>
< project  xmlns = " http://maven.apache.org/POM/4.0.0 "
         xmlns : xsi = " http://www.w3.org/2001/XMLSchema-instance "
         xsi : schemaLocation = " http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd " >
    < modelVersion > 4.0.0 </ modelVersion >

    < groupId > net.perfectdreams.protocolsupportstuff </ groupId >
    < artifactId > ProtocolSupportStuff </ artifactId >
    < versie > 2.1.1 </ versie >

    < eigenschappen >
        < kotlin .version> 1.3.0 </ kotlin .version>
        < maven .compiler.source> 1.8 </ maven .compiler.source>
        < maven .compiler.target> 1.8 </ maven .compiler.target>
        < kotlin .compiler.incremental> waar </ kotlin .compiler.incremental>
    </ eigenschappen >

    < repositories >
        < repository >
            < id > jitpack.io </ id >
            < url > https://jitpack.io </ url >
        </ repository >
        < repository >
            < id > kotlin-eap </ id >
            < url > http://dl.bintray.com/kotlin/kotlin-eap </ url >
        </ repository >
        < repository >
            < id > dmulloy2-repo </ id >
            < url > http://repo.dmulloy2.net/nexus/repository/public/ </ url >
        </ repository >
        < repository >
            < id > aikar </ id >
            < url > https://repo.aikar.co/content/groups/aikar/ </ url >
        </ repository >
        < repository >
            < id > perfectdreams-repo </ id >
            < url > https://repo.perfectdreams.net/ </ url >
            < snapshots >
                < enabled > true </ enabled >
                < updatePolicy > altijd </ updatePolicy >
            </ snapshots >
        </ repository >
    </ repositories >

    < pluginRepositories >
        < pluginRepository >
            < id > kotlin-eap </ id >
            < url > http://dl.bintray.com/kotlin/kotlin-eap </ url >
        </ pluginRepository >
    </ pluginRepositories >

    < afhankelijkheden >
        < afhankelijkheid >
            < groupId > com.destroystokyo.paper </ groupId >
            < artifactId > paper </ artifactId >
            < versie > 1.13-R0.1-SNAPSHOT </ versie >
            < scope > verstrekt </ scope >
        </ afhankelijkheid >
        < afhankelijkheid >
            < groupId > org.jetbrains.kotlin </ groupId >
            < artifactId > kotlin-stdlib-jdk8 </ artifactId >
            < version > $ {kotlin.version} </ version >
        </ afhankelijkheid >
        < afhankelijkheid >
            < groupId > com.comphenix.protocol </ groupId >
            < artifactId > ProtocolLib-API </ artifactId >
            < versie > 4.3.0 </ versie >
            < scope > verstrekt </ scope >
        </ afhankelijkheid >
        < afhankelijkheid >
            < groupId > com.github.ProtocolSupport </ groupId >
            < artifactId > ProtocolSupport </ artifactId >
            < version > 417781cc1d </ version >
            < scope > verstrekt </ scope >
        </ afhankelijkheid >
        < afhankelijkheid >
            < groupId > co.aikar </ groupId >
            < artifactId > acf-paper </ artifactId >
            < versie > 0.5.0-SNAPSHOT </ versie >
        </ afhankelijkheid >
    </ afhankelijkheden >

    < build >
        < sourceDirectory > $ {project.basedir} / src / main / kotlin </ sourceDirectory >
        < plug-ins >
            < plugin >
                < artifactId > kotlin-maven-plugin </ artifactId >
                < groupId > org.jetbrains.kotlin </ groupId >
                < version > $ {kotlin.version} </ version >

                < executies >
                    < uitvoering >
                        < id > compileren </ id >
                        < goals > < goal > compileer </ goal > </ goals >
                    </ executie >

                    < uitvoering >
                        < id > test-compileren </ id >
                        < goals > < goal > test-compileren </ goal > </ goals >
                    </ executie >
                </ executies >
            </ plugin >
            < plugin >
                < groupId > org.apache.maven.plugins </ groupId >
                < artifactId > maven-shad-plugin </ artifactId >
                < versie > 3.0.0 </ versie >
                < executies >
                    < uitvoering >
                        < phase > pakket </ phase >
                        < doelen >
                            < goal > schaduw </ goal >
                        </ goals >
                        < configuratie >
                            < verhuizingen >
                                < verhuizing >
                                    < patroon > kotlin </ patroon >
                                    < shadedPattern > net.perfectdreams.protocolsupportstuff.libs.kotlin </ shadedPattern >
                                </ verhuizing >
                                < verhuizing >
                                    < pattern > co.aikar.commands </ pattern >
                                    < shadedPattern > net.perfectdreams.protocolsupportstuff.libs.acf </ shadedPattern >
                                </ verhuizing >
                            </ verhuizingen >
                        </ configuratie >
                    </ executie >
                </ executies >
            </ plugin >
        </ plugins >
    </ build >
</ project >
